<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ModeSelectionActivity"
    android:background="@drawable/background_yellow"
    android:orientation="vertical">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/imgViewLogo"
        android:background="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="70" />

    <Button
        android:layout_width="320dp"
        android:layout_height="0dp"
        android:id="@+id/btnSoloMode"
        android:layout_gravity="center"
        android:background="@drawable/single_player_mode_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:layout_weight="20" />

    <Button
        android:layout_width="320dp"
        android:layout_height="0dp"
        android:id="@+id/btnPartyMode"
        android:layout_gravity="center"
        android:background="@drawable/party_mode_button"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/btnSoloMode"
        android:layout_alignLeft="@+id/btnSoloMode"
        android:layout_weight="20" />

</LinearLayout>
